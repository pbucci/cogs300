#include "drive.c"
#include "ultra.c"

// Main loop
task main() {
  SetSensorLowspeed(S1);
  scanAndRecord();

	int max = maxMin();
	int range = 7;

	while(true) {
    ResetScreen();
		int reading = SensorUS(S1);
    NumOut(0,LCD_LINE1,reading);
		if (fuzzy(reading,max,range)) {
		   Wait(5000);
		}
    turnLeft(50);
    Wait(50);
	}
}
